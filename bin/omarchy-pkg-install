#!/usr/bin/env bash
# NixOS adaptation: Search and install packages using nix

fzf_args=(
  --multi
  --preview 'nix search nixpkgs {1} 2>/dev/null | head -20'
  --preview-label='alt-p: toggle description, alt-j/k: scroll, tab: multi-select'
  --preview-label-pos='bottom'
  --preview-window 'down:65%:wrap'
  --bind 'alt-p:toggle-preview'
  --bind 'alt-d:preview-half-page-down,alt-u:preview-half-page-up'
  --bind 'alt-k:preview-up,alt-j:preview-down'
  --color 'pointer:green,marker:green'
)

# Search nixpkgs and let user select
pkg_names=$(nix search nixpkgs --json 2>/dev/null | jq -r 'keys[]' | sed 's/legacyPackages.x86_64-linux.//' | fzf "${fzf_args[@]}")

if [[ -n "$pkg_names" ]]; then
  echo "Selected packages: $pkg_names"
  echo ""
  echo "To install these packages permanently, add them to /etc/nixos/flake.nix"
  echo "Or install temporarily with: nix-env -iA nixpkgs.<package>"
  echo ""
  read -p "Install temporarily? (y/n) " -n 1 -r
  echo
  if [[ $REPLY =~ ^[Yy]$ ]]; then
    echo "$pkg_names" | while read -r pkg; do
      nix-env -iA "nixpkgs.$pkg"
    done
    omarchy-show-done
  fi
fi
